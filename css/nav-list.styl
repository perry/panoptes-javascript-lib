.nav-list
  margin: 0
  padding: 0

  > li
    display: block

.nav-list-header
  font-size: 0.7em
  font-weight: bold
  letter-spacing: 0.1em
  padding: 0.2em 1vw
  opacity: 0.7
  text-transform: uppercase

.nav-list-item
  border-top: 1px solid rgba(gray, 0.3)
  display: block
  padding: 0.2em 1vw
  text-decoration: none

  &.active
    background: MAIN_HIGHLIGHT
    border-top-color: transparent
    color: white
    font-weight: bold
