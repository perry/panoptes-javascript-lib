.workflow-editor
  .field-label
    font-size: 0.7em
    font-weight: bold
    opacity: 0.8

  .task
    background: white
    border: 1px solid rgba(gray, 0.5)
    border-radius: 3px
    margin: 1em 0
    overflow: hidden
    padding: 0.5em
    position: relative

    &:first-child
      margin-top: 0

  .controls
    font-size: 0.7em
    padding: 0 0.5em
    position: absolute
    right: 0
    top: 0

    button
      @extends $reset-button

  .inline-input
    border: 1px solid transparent
    border-radius: 2em
    cursor: pointer
    display: inline-block
    font-size: 0.7em
    margin: 0 0.5em
    padding: 0 1em 0 0.5em

    &:hover
      border-color: rgba(gray, 0.5)

  .answer
    border: 1px solid rgba(gray, 0.5)
    border-radius: 3px
    margin: 0.5em 0
    padding: 0.5em
    position: relative

    &:first-child
      margin-top: 0

  .answer-properties
    display: flex
    font-size: 0.7em

    > *
      flex: 1 1 auto
      text-align: center

  .adder-container
    display: flex

  .adder
    @extends $reset-button
    border: 1px dashed rgba(gray, 0.5)
    border-radius: 3px
    flex: 1 1 auto
    margin-left: 0.5em
    padding: 1em 0

    &:first-child
      margin-left: 0

.workflow-editor-code-view
  font-size: 0.7em
